[
    {
        "$match": {
            "year": {
                "$lt": 1950
            },
            "imdb.rating": {
                "$gte": 7.0
            }
        }
    },
    {
        "$lookup": {
            "from": "comments",
            "localField": "_id",
            "foreignField": "movie_id",
            "as": "comments"
        }
    },
    {
        "$project": {
            "title": 1,
            "_id": 0,
            "releaseYear": "$year",
            "genres": 1,
            "imdbRating": "$imdb.rating",
            "comments": {
                "$map": {
                    "input": {
                        "$slice": ["$comments", 2]
                    },
                    "as": "comment",
                    "in": {
                        "name": "$$comment.name",
                        "text": "$$comment.text"
                    }
                }
            }
        }
    }
]
